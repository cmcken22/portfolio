{
  "extends": "./jsconfig.paths.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "allowJs": true,
    "noEmit": true,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "vite.config.js"]
}
